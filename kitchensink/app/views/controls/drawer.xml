<Alloy>
	<Window id="win" title="Drawer" onAndroidback="onAndroidBack" onOpen="onWindowOpen">
		<DrawerLayout platform="android" id="drawerLayout">
			<LeftView>
				<View class="views">
					<Label text="Left"/>
				</View>
			</LeftView>
			<CenterView>
				<View>
					<Button id="btn_left" title="Toggle left" onClick="onClickLeft"/>
					<Button id="close" title="Close window" onClick="onClickClose"/>
					<Button id="btn_right" title="Toggle right" onClick="onClickRight"/>
				</View>
			</CenterView>
			<RightView>
				<View class="views">
					<Label text="Right"/>
				</View>
			</RightView>
		</DrawerLayout>
	</Window>
</Alloy>
