<Alloy>
    <Window title="Alert Dialog">
        <Label id="resultLabel" top="30"/>
        <Button title="Show Alert Dialog" onClick="onShowAlertDialog"/>
        <AlertDialog id="alert" title="Logout" message="Do you really want to log-out?" onClick="onAlertDialogClicked">
            <ButtonNames>
                <ButtonName>Confirm</ButtonName>
                <ButtonName>Delete</ButtonName>
                <ButtonName>Cancel</ButtonName>
            </ButtonNames>
        </AlertDialog>
    </Window>
</Alloy>
