
'#win[platform=ios]': {
	extendEdges: [ Ti.UI.EXTEND_EDGE_ALL ],
	includeOpaqueBars: true,
	navBarHidden: false,
	tabBarHidden: true
}

'#win[platform=android]': {
	extendSafeArea: true,
	theme: 'Theme.Titanium.Dark.Solid',
	windowFlags: Ti.UI.Android.FLAG_TRANSLUCENT_STATUS
}

'#imageView': {
	image: '/images/road.jpg',
	scalingMode: Ti.Media.IMAGE_SCALING_ASPECT_FIT,
	width: '100%',
	height: '100%'
}
